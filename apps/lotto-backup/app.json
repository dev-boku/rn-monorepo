{
  "expo": {
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/images/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true
    },
    "assetBundlePatterns": [
      "assets/fonts/*"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "fonts": [
      "./assets/fonts/Pretendard-Regular.ttf",
      "./assets/fonts/Pretendard-Medium.ttf",
      "./assets/fonts/Pretendard-Bold.ttf"
    ],
    "icon": "./assets/images/icon.png",
    "ios": {
      "supportsTablet": true
    },
    "name": "lotto",
    "newArchEnabled": true,
    "orientation": "portrait",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "로또 QR 코드 스캔을 위해 카메라 권한이 필요합니다."
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "scheme": "lotto",
    "slug": "lotto",
    "userInterfaceStyle": "automatic",
    "version": "1.0.0",
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png",
      "output": "static"
    }
  }
}
